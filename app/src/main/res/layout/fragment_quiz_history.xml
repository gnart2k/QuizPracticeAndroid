<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id = "@+id/historyRecyclerViewLayout"
    tools:context=".views.QuizHistoryFragment"
    android:backgroundTintMode="screen"
    >


    <ImageButton
        android:id="@+id/historyTv"
        android:layout_width="81dp"
        android:layout_height="53dp"
        android:background="@drawable/history_svgrepo_com"
        android:textColor="#00BCD4"
        android:textColorLink="#03A9F4"
        android:textSize="34sp"
        tools:layout_editor_absoluteX="165dp"
        tools:layout_editor_absoluteY="16dp"
        tools:ignore="MissingConstraints" />

    <ProgressBar
        android:id="@+id/quizHistoryProgressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateTint="@color/light_sky"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/historyRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="630dp"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="97dp"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>